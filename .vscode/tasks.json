{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G", "Visual Studio 17 2022",
                "-S", ".",
                "-B", "build"
            ],
            "options": {
                "env": {
                    "PATH": "${env:PATH};C:\\Program Files\\CMake\\bin"
                }
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "CMake: Build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build", "build",
                "--config", "Debug"
            ],
            "options": {
                "env": {
                    "PATH": "${env:PATH};C:\\Program Files\\CMake\\bin"
                }
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
        {
            "label": "CMake: Configure and Build",
            "dependsOn": [
                "CMake: Configure",
                "CMake: Build"
            ],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": []
        }
    ]
}



